<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">

<head th:include="/header" />

<body>
    ${enumcodes}
    <section class="content-header">
        <h1>${mainTitle}</h1>
    </section>
    <section class="content">
        <div class="box box-solid">
            <div class="box-body">

            <div style="margin-top: 5px;height:50px">
                <div class="pull-right">
                    <a class="btn btn-default btn-flat"
                       style="width:85px;float:left;margin-right:10px"
                       onclick="table.export()">
                        <i class="glyphicon glyphicon-export"></i>&nbsp;导出
                    </a>

                    <a class="btn bg-olive btn-flat"
                       style="width:85px;float:left;"
                       onclick="add()">
                        <i class="fa fa-plus"></i>&nbsp;新增
                    </a>
                </div>
            </div>
            <table id="dataGrid"></table>
            </div>
        </div>
    </section>
    <div th:include="/footer" />
    <script type="text/javascript">
    var table;
    $(function() {
        initDataGrid();
    });

    function initDataGrid() {
        table = $.createTable("#dataGrid", {
            idField: "id",
            columns: [
                [
${tableColumns}
                    {
                        title: "操作",
                        align: "center",
                        width: "200px",
                        events: {
                            'click .detail': function(e, value, row, index) {
                                detail(row);
                            },
                            'click .edit': function (e, value, row, index) {
                                edit(row);
                            },
                            'click .remove': function(e, value, row, index) {
                                remove(row);
                            }
                        },
                        formatter: function(value, row, index) {
                            return '<button class="detail btn btn-xs btn-flat btn-default" style="margin-right:10px"><i class="fa fa-search"></i>&nbsp;查看</button>' +
                                '<button class="edit btn btn-xs btn-flat btn-success" style="margin-right:10px"><i class="fa fa-edit"></i>&nbsp;编辑</button>' +
                                '<button class="remove btn btn-xs btn-flat btn-danger"><i class="fa fa-remove"></i>&nbsp;删除</button>';

                        }
                    }
                ]
            ],
            url: '${searchUrl}',
            searchbar: '#searchbar',
            exportUrl: '${exportUrl}',
            pagination: true
        });
    }

    function add() {
        window.location = '${addUrl}';
    }

    function detail(row) {
        window.location = '${detailUrl}' + (row ? ('?id=' + row.id) : '');
    }

    function edit(row) {
        window.location = '${editUrl}' + (row ? ('?id=' + row.id) : '');
    }

    function remove(row) {
        if (row) {
            layer.confirm('确定删除吗?', function() {
                $.postAjax('${removeUrl}?id=' + row.id, function() {
                    $.successMessage("删除成功");
                    table.refresh();
                });
            });
        }
    }
    </script>
</body>

</html>