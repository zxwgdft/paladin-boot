<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">

<head th:include="/${mainModel}/header" />

<body>
    ${enumcodes}
    <section class="content-header">
        <h1>${mainTitle}</h1>
        <ol class="breadcrumb">
            <li><a href="${indexUrl}"><i class="fa fa-list-alt"></i>列表</a></li>
            <li class="active">编辑</li>
        </ol>
    </section>
    <section class="content">
    </section>
    <input type="hidden" id="id" th:value="${r'${id}'}"/>
    <div th:include="/${mainModel}/footer" />
    <script type="text/javascript">

    $(function() {
    	var options = {
	        id: "model",
	        name: "${title}",
	        url:${updateUrl},
	        columns: ${columns}
	    }
    
        $.getAjax(${getDataUrl}, function(data) {
            var html = generateHtml(options);
            $(".content").html(html);
            $.initComponent($(".content"));
           
            var model = new tonto.Model("model", options.columns, {
                pattern: 'edit',
                back: '${indexUrl}',
                successCallback:function(){
                    $.successAlert("修改成功",function(){
                        window.location = "${indexUrl}";
                    });
                }
            });
            model.setData(data);
        });
    });
    </script>
</body>

</html>